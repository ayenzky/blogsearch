.no-margin-bottom
  margin-bottom:$no-padding !important

.logo-wrapper .logo-left
  margin-top:1.5em


.blog-wrap .blog

  div img
    max-width:100%

.small-post-meta, .widget-post-meta
  margin-top:2px
  padding:2px
  color:#ccc
  font-size:14px
  font-weight:600

  span i::before
