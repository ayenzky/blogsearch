  #contact-info li i
    float:left
    margin-top:4px
    width:20px
    text-align:center
    margin-right:6px

.slide-text
  position:absolute
  bottom:0px
  width:100%
  text-align:left
  padding:15px
  background-color: rgba(0, 0, 0, 0.5)

  .post-meta
    border:none


/* Custom calendar elements */

.calendar
    text-align center
    position relative
    a
        text-decoration none
    h2
        font-size 22px
        line-height 20px
        margin 4px 0
        text-transform uppercase
        &.title
            text-transform uppercase
            font-size 13px
            font-weight 300
            letter-spacing 3px
            color #777
            padding 20px
            background #fff
            border-bottom 1px solid #ddd
            border-top 5px solid #039BE5
            box-shadow 0 1px rgba(255,255,255,0.9)
            margin-bottom 30px
            margin-top 0px
    h3
        font-size 24px
        line-height 24px
        margin 5px 0
    table
        border-spacing 0
        width 100%
    header
        position relative
        border-top 4px solid #039BE5
        border-bottom 1px solid #d0d0d0
        padding 15px 0px
    thead
        td
            font-weight 600
            text-transform uppercase
    tbody
        color #7c8a95
        td
            &:hover
              background-color: #039BE5
              color:#fff
              &:after
                background-color:#fff


    td
        height 50px
        line-height 3
        text-align center
        width 50px
        padding 0px
        border-radius:0px
    .current-day
        background #039BE5
        color #f9f9f9
    .event
        cursor pointer
        position relative
        &:after
            background #039BE5
            border-radius 50%
            bottom 8px
            display block
            content ''
            height 8px
            left 50%
            margin -4px 0 0 -4px
            position absolute
            width 8px
        &.current-day
            &:after
                background #f9f9f9
    .btn-prev
        left 30px
    .btn-next
        right 35px
    .list
        margin-top 0px
        position absolute
        top 0px
        height 100% !important
        background-color #f6f6f6
        z-index 1
    .close
        color #fff
        position absolute
        right 5px
        top 10px
        float right
        border 1px solid #039BE5
        background-color #039BE5
        padding 5px
    .day-event
        width 100%
        padding-top 0px
        padding-bottom 0px
        margin-bottom 0px
        display none
        p
            padding-left 20px
            padding-right 20px
            padding-bottom 20px
        span
            font-size 12px
        button
            position relative
            vertical-align top
            width 100%
            height 50px
            padding 0
            font-size 18px
            color white
            text-align center
            text-shadow 0 1px 2px rgba(0, 0, 0, 0.25)
            background #c0392b
            border 0
            border-bottom 2px solid #b53224
            cursor pointer
            -webkit-box-shadow inset 0 -2px #b53224
            box-shadow inset 0 -2px #b53224

.calendar-container
    height 538px
    left 50%
    margin -255px 0 0 -245px
    position absolute
    top 45%
    width 510px

.calendar .btn-prev,
.calendar .btn-next
    border 2px solid #cbd1d2
    border-radius 50%
    color #cbd1d2
    height 32px
    font-size 22px
    line-height 28px
    margin -16px
    position absolute
    top 50%
    width 32px

.calendar .btn-prev:hover,
.calendar .btn-next:hover
    background #cbd1d2
    color #f9f9f9

