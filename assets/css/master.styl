@import '_settings'

normalize-css()
base()


body
  color: black
  font-weight:400
  background-color:#eee

.container
  background-color:#fff
  #main-content
    padding-bottom: 40px
    > .row
      margin-bottom:0px

.container section
  width:100%




.clear
  clear:both

img
  max-width:100%


nav ul li, nav a, h1, h2, h3, h4, h5, h6
  font-family: $lato
  font-weight: 400

nav .nav-wrapper ul li a
  font-weight: 300
  text-transform: uppercase

body .menu-wrapper .searchbox
  position:relative
  min-width:50px
  width:0%
  height:40px
  float:right
  line-height:0
  margin-top: 5px
  margin-right: 0px
  overflow:hidden
  -webkit-transition: width 0.3s
  -moz-transition: width 0.3s
  -ms-transition: width 0.3s
  -o-transition: width 0.3s
  transition: width 0.3s


body .menu-wrapper .searchbox-input
  top:0
  right:0
  border:0
  outline:0
  background:#fff
  width:100% !important
  height:40px
  margin:0
  padding:0px 55px 0px 20px
  border-radius:2px
  -webkit-border-radius:2px
  -moz-border-radius:2px
  -ms-border-radius:2px
  -o-border-radius:2px
  color:gray

body .menu-wrapper .searchbox-input::-webkit-input-placeholder
  color: silver

body .menu-wrapper .searchbox-input:-moz-placeholder
  color: silver

body .menu-wrapper .searchbox-input::-moz-placeholder
  color: silver

body .menu-wrapper .searchbox-input:-ms-input-placeholder
  color: silver


body .menu-wrapper .searchbox-icon.fa::before
  font-size:22px

body .menu-wrapper .searchbox-icon
  width:50px
  height:40px
  display:block
  position:absolute
  top:0
  font-size:0px
  right:0
  padding:0
  margin:0
  border:0
  outline:0
  line-height:1.8
  text-align:center
  cursor:pointer
  color:#dcddd8
  background:#212121


body .menu-wrapper .searchbox-submit
  width:50px
  height:40px
  display:block
  position:absolute
  top:0
  font-family:verdana
  font-size:22px
  right:0
  padding:0
  margin:0
  border:0
  outline:0
  line-height:1.8
  text-align:center
  cursor:pointer
  color:#dcddd8
  background:#212121


body .menu-wrapper .searchbox-open
    width:100%


body .menu-wrapper .byline
  position:absolute
  top:150px
  left:30%
  text-align:center
  font-size:18px

body .menu-wrapper .byline a
  text-decoration:none
  color: #d74b4b


.no-padding-right
